<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000"
    android:orientation="horizontal" >
    
    <LinearLayout 
        android:id="@+id/id_tab_person"
        android:layout_height="wrap_content"
        android:layout_width="0sp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        >
        <ImageButton             
            android:id="@+id/id_tab_person_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:clickable="false"
            android:src="@drawable/tab01_press"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系人"
            android:textColor="#fff"
            android:textStyle="bold"/>
        
    </LinearLayout>
     
     <LinearLayout 
        android:id="@+id/id_tab_search"
        android:layout_height="wrap_content"
        android:layout_width="0sp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        >
        <ImageButton             
            android:id="@+id/id_tab_search_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:clickable="false"
            android:src="@drawable/tab02"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:textColor="#fff"
            android:textStyle="bold"/>
        
    </LinearLayout>
     <LinearLayout 
        android:id="@+id/id_tab_account"
        android:layout_height="wrap_content"
        android:layout_width="0sp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        >
        <ImageButton             
            android:id="@+id/id_tab_account_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:clickable="false"
            android:src="@drawable/tab03"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账户"
            android:textColor="#fff"
            android:textStyle="bold"/>        
    </LinearLayout>
   

</LinearLayout>
